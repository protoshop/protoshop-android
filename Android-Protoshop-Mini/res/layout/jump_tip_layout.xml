<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/jump_cancel_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25"
        android:background="@color/red_971835"
        android:gravity="center"
        android:paddingLeft="@dimen/_5"
        android:paddingRight="@dimen/_5"
        android:text="@string/cancel_text"
        android:textAppearance="@style/text_16_ffffff" />

    <TextView
        android:id="@+id/jump_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25"
        android:background="@color/black_464c52"
        android:gravity="center"
        android:paddingLeft="@dimen/_15"
        android:paddingRight="@dimen/_15"
        android:text="@string/jump_tip_text"
        android:textAppearance="@style/text_16_ffffff" />

</LinearLayout>
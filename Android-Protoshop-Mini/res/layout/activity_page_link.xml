<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:title="http://schemas.android.com/apk/res/com.ctrip.protoshop.mini"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinkPageActivity" >

    <com.ctrip.protoshop.mini.wiget.MiniTitleView
        android:id="@+id/page_link_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        title:center_text="链接至"
        title:left_text="返回" />

    <GridView
        android:id="@+id/link_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/page_link_title"
        android:numColumns="3" >
    </GridView>

</RelativeLayout>
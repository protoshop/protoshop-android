<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5" >

    <ImageView
        android:id="@+id/project_icon_view"
        android:layout_width="@dimen/_50"
        android:layout_height="@dimen/_50"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_2"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/project_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/project_page_num_view"
        android:layout_toRightOf="@+id/project_icon_view"
        android:text="TextView"
        android:textAppearance="@style/text_20_000000" />

    <TextView
        android:id="@+id/project_page_num_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/project_icon_view"
        android:layout_toRightOf="@+id/project_icon_view"
        android:text="TextView"
        android:textAppearance="@style/text_16_cccccc" />

</RelativeLayout>
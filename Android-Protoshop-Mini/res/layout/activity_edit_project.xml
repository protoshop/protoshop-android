<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_fafafa"
    tools:context=".EditProjectActivity" >

    <GridView
        android:id="@+id/project_page_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_fafafa"
        android:listSelector="@drawable/item_backgroud_selector"
        android:numColumns="3"
        android:scrollbars="none" >
    </GridView>

    <android.view.ext.SatelliteMenu
        android:id="@+id/project_setting_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/_5" />

</RelativeLayout>
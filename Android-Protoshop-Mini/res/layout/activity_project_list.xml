<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_fafafa"
    tools:context=".ProjectListActivity" >

    <ListView
        android:id="@+id/project_list_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_fafafa"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@drawable/item_backgroud_selector"
        android:scrollbars="none" >
    </ListView>

    <ImageView
        android:id="@+id/project_setting_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/_5"
        android:src="@drawable/add" />

    <ImageView
        android:id="@+id/create_new_project_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/add" />

</RelativeLayout>
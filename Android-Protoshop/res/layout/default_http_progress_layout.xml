<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/progress_backgroud_1"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10"
        android:background="@drawable/progress_backgroud_0"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/http_progress_tip_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在登陆....."
            android:textAppearance="@style/text_ffffff_20" />

    </LinearLayout>

</LinearLayout>